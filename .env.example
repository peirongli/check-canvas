# Environment Configuration for VerifyVision-Pro
# Copy this file to .env and customize as needed

# ===============================
# MODEL CONFIGURATION
# ===============================
MODEL_TYPE=multimodal
BASELINE_MODEL_PATH=models/baseline_model.pth
MULTIMODAL_MODEL_PATH=models/multimodal_model.pth
SEGMENTATION_MODEL_PATH=models/segmentation_model.pth

# ===============================
# DATA CONFIGURATION
# ===============================
DATA_ROOT=data
TRAIN_DATA_PATH=data/train
VAL_DATA_PATH=data/val
TEST_DATA_PATH=data/test
BATCH_SIZE=32
IMAGE_SIZE=224

# ===============================
# TRAINING CONFIGURATION
# ===============================
LEARNING_RATE=0.001
EPOCHS=50
PATIENCE=10
EARLY_STOPPING=True
CHECKPOINT_DIR=checkpoints

# ===============================
# CLIP MODEL CONFIGURATION
# ===============================
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
TEXT_PROMPTS=authentic_real,forged_fake,original_unedited,photoshopped_composite
TEMPERATURE=0.07

# ===============================
# HARDWARE CONFIGURATION
# ===============================
DEVICE=cuda
NUM_WORKERS=4
PIN_MEMORY=True
MIXED_PRECISION=True

# ===============================
# LOGGING & MONITORING
# ===============================
LOG_DIR=logs
TENSORBOARD_DIR=logs/tensorboard
WANDB_PROJECT=verifyvision-pro
EXPERIMENT_NAME=default_experiment

# ===============================
# DEPLOYMENT CONFIGURATION
# ===============================
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8000
MAX_BATCH_SIZE=16
TIMEOUT_SECONDS=30

# ===============================
# SECURITY & VALIDATION
# ===============================
MAX_IMAGE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,tiff,bmp
ENABLE_AUTHENTICATION=False
API_KEY_REQUIRED=False